{
  "name": "terra-industries",
  "version": "3.0.1",
  "private": true,
  "description": "Terra Industries - Full-Stack Defense Technology Platform",
  "scripts": {
    "dev": "pnpm --filter client dev",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server start:dev",
    "dev:all": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "build": "pnpm --filter client build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "start": "pnpm --filter client start",
    "start:client": "pnpm --filter client start",
    "start:server": "pnpm --filter server start:prod",
    "test": "pnpm --filter client test && pnpm --filter server test",
    "test:client": "pnpm --filter client test",
    "test:server": "pnpm --filter server test",
    "test:e2e": "pnpm --filter server test:e2e",
    "lint": "pnpm --filter client lint && pnpm --filter server lint",
    "lint:client": "pnpm --filter client lint",
    "lint:server": "pnpm --filter server lint",
    "docker:up": "docker-compose up -d postgres redis",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v",
    "prisma:studio": "pnpm --filter server prisma:studio",
    "prisma:migrate": "pnpm --filter server prisma migrate dev"
  },
  "keywords": [
    "defense",
    "aerospace",
    "nextjs",
    "nestjs",
    "typescript",
    "full-stack"
  ],
  "author": "Terra Industries",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

